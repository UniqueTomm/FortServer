            function getAuthToken() {
                var authToken = null;
                document.cookie.split(';').forEach(function (cookie) {
                    var parts = cookie.trim().split('=');
                    if (parts[0] === 'AuthToken') {
                        authToken = parts[1] ? decodeURIComponent(parts[1]) : '';
                        //l
                    }
                });
                return authToken;
            }

