<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Configurations>Debug;Release;HTTPS</Configurations>
    <Platforms>AnyCPU;x64</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="src\Resources\Ini\DefaultEngine.ini" />
    <None Remove="src\Resources\Ini\DefaultGame.ini" />
    <None Remove="src\Resources\Ini\DefaultInput.ini" />
    <None Remove="src\Resources\Ini\DefaultRuntimeOptions.ini" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="src\Resources\Ini\DefaultEngine.ini">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="src\Resources\Ini\DefaultGame.ini">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="src\Resources\Ini\DefaultRuntimeOptions.ini">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="src\Resources\Ini\DefaultInput.ini">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="src\Resources\Certificates\" />
    <Folder Include="src\Resources\Json\shop\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Discord.Net" Version="3.13.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
	<PackageReference Include="MongoDB.Driver" Version="2.23.1" />
	<PackageReference Include="SkiaSharp" Version="2.88.7" />
	<PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="7.3.1" />
  </ItemGroup>

</Project>
